"VertexlitGeneric"
{
	/////////////////////////////////////////////////////
	//					texture.
	/////////////////////////////////////////////////////
	$basetexture "models\weapons\c_items/c_spy_silver_watch_interior.vtf"
	$model 1

	//$alpha 1.0
	//$translucent 1


	///////////////////////////////////////////////////////////////////////////////
	//					phong.
	///////////////////////////////////////////////////////////////////////////////
	$phong 1
	$phongboost 0.25
	$phongexponent 15
	$phongfresnelranges "[0.5 0.65 1]"

	//$lightwarptexture "models/player/pyro/pyro_lightwarp"		//player light warp
	$lightwarptexture "models\lightwarps\weapon_lightwarp"		//weapon light warp
	//$halflambert 1


	///////////////////////////////////////////////////////////////////////////////
	//					rim lighting.
	///////////////////////////////////////////////////////////////////////////////
	$rimlight 1
	$rimlightexponent 15
	$rimlightboost 1.0

	///////////////////////////////////////////////////////////////////////////////
	//					paint section.	
	///////////////////////////////////////////////////////////////////////////////
	//$BlendTintByBaseAlpha 1
	//$BlendTintColorOverBase 1.0

	$colortint_base "[1 1 1]"
	$colortint_tmp "[0 0 0]"
	$color2 "[1 1 1]"

	$BaseMapAlphaPhongMask 1

	/////////////////////////////////////////////////////
	//					cloaking.
	/////////////////////////////////////////////////////
	$cloakPassEnabled 1

	/////////////////////////////////////////////////////
	//					Proxies.
	/////////////////////////////////////////////////////
	"Proxies"
	{
		"weapon_invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1"  "$yellow"
			"resultVar" "$color2"
		}
  		"ItemTintColor"
  		{
   			"resultVar" "$colortint_tmp"
  		}
		"SelectFirstIfNonZero"
  		{
   			"srcVar1" "$colortint_tmp"
   			"srcVar2" "$colortint_base"
   			"resultVar" "$color2"
  		}
		"vm_invis"
		{
		}
	}
}
