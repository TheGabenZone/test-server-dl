"VertexlitGeneric"
{
	///////////////////////////////////////////////////////////////////////////////
	//					texture.
	///////////////////////////////////////////////////////////////////////////////
	$basetexture "models\weapons\c_items\c_mad_milk_liquid"
	$model 1

	//$nocull 1
	//$alphatest 1
	//$additive 1
	$alpha 0.1
	//$translucent 1


	///////////////////////////////////////////////////////////////////////////////
	//					phong.
	///////////////////////////////////////////////////////////////////////////////
	$phong 1
	$phongboost 0.75
	$phongexponent 50
	$phongfresnelranges "[0.75 0.75 1.0]"

	$rimlight 1
	$rimlightexponent  25
	$rimlightboost 1.0

	$envmap "cubemaps\cubemap_specular001"
	$envtint "[0.25 0.25 0.3]"

	$lightwarptexture "models\weapons\c_items/c_ambassador_lightwarp"


	///////////////////////////////////////////////////////////////////////////////
	//					paint section.	
	///////////////////////////////////////////////////////////////////////////////
	$BlendTintByBaseAlpha 1
	$BlendTintColorOverBase 1.0

	$colortint_base "[.05 .05 .05]"
	$colortint_tmp "[0 0 0]"
	$color2 "[.05 .05 .05]"

	//$BaseMapAlphaPhongMask 1


	///////////////////////////////////////////////////////////////////////////////
	//					special effects.
	///////////////////////////////////////////////////////////////////////////////
	$yellow 0
	$glowcolor 1

	$cloakPassEnabled 1
	$sheenPassEnabled 1

	$sheenmap		"cubemaps\cubemap_sheen001"
	$sheenmapmask		"Effects\AnimatedSheen\animatedsheen0"
	$sheenmaptint		"[ 1 1 1 ]"
	$sheenmapmaskframe 	0
	$sheenindex 		0


	///////////////////////////////////////////////////////////////////////////////
	//					Proxies.
	///////////////////////////////////////////////////////////////////////////////
	"Proxies"
	{
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
		//View Model Cloaking
		//"vm_invis"
		//{
		//}
	}
}
