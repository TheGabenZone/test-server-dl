"VertexlitGeneric"
{
	///////////////////////////////////////////////////////////////////////////////
	//					texture.
	///////////////////////////////////////////////////////////////////////////////
	$basetexture "models\weapons\c_items\c_spy_silver_watch_cloak_lights_on.vtf"
	$model 1

	//$alpha 1.0
	//$translucent 1


	///////////////////////////////////////////////////////////////////////////////
	//					phong.
	///////////////////////////////////////////////////////////////////////////////
	$phong 1
	$phongboost 0.05
	$phongexponent 25
	$phongfresnelranges "[0.1 0.25 0.5]"
	$phongtint "[0 50 25]"

	//$lightwarptexture "models/player/pyro/pyro_lightwarp"		//player light warp
	$lightwarptexture "models\lightwarps\weapon_lightwarp"		//weapon light warp
	//$halflambert 1


	///////////////////////////////////////////////////////////////////////////////
	//					rim lighting.
	///////////////////////////////////////////////////////////////////////////////
	$rimlight 1
	$rimlightexponent 25
	$rimlightboost 0.05


	///////////////////////////////////////////////////////////////////////////////
	//					paint section.	
	///////////////////////////////////////////////////////////////////////////////
	//$BlendTintByBaseAlpha 1
	//$BlendTintColorOverBase 1.0

	$colortint_base "[0.40 0.40 0.40]"
	$colortint_tmp "[0 0 0]"
	$color2 "[0.40 0.40 0.40]"

	$BaseMapAlphaPhongMask 1


	///////////////////////////////////////////////////////////////////////////////
	//					special effects.
	///////////////////////////////////////////////////////////////////////////////
	$yellow 0
	$glowcolor 1

	$cloakPassEnabled 1
	$sheenPassEnabled 1

	$sheenmap		"cubemaps\cubemap_sheen001"
	$sheenmapmask		"Effects\AnimatedSheen\animatedsheen0"
	$sheenmaptint		"[ 1 1 1 ]"
	$sheenmapmaskframe 	0
	$sheenindex 		0


	///////////////////////////////////////////////////////////////////////////////
	//					Proxies.
	///////////////////////////////////////////////////////////////////////////////
	"Proxies"
	{
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
  		"ItemTintColor"
  		{
   			"resultVar" "$colortint_tmp"
  		}
		"SelectFirstIfNonZero"
  		{
   			"srcVar1" "$colortint_tmp"
   			"srcVar2" "$colortint_base"
   			"resultVar" "$color2"
  		}
		//View Model Cloaking
		//"vm_invis"
		//{
		//}
	}
}
